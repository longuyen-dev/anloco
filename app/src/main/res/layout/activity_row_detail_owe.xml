<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RowDetailOweActivity">
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/idInvoiceTextView"
            android:layout_width="0dp"
            android:layout_weight=".35"
            android:text="id"
            android:background="#d9d9d9"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dateInvoiceTextView"
            android:layout_width="0dp"
            android:text="date"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_weight=".65"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:padding="5dp"
            android:textAlignment="center"
            android:text="Tổng HĐ"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:textAlignment="center"
            android:padding="5dp"
            android:text="Nợ"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:padding="5dp"
            android:textAlignment="center"
            android:text="Nợ luỹ kế"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout2">

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:padding="5dp"
            android:textAlignment="center"
            android:text="Tổng HĐ"/>
        <TextView
            android:id="@+id/payTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:textAlignment="center"
            android:padding="5dp"
            android:text="Thanh toán"/>
        <TextView
            android:id="@+id/oweTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:padding="5dp"
            android:textColor="#f11"
            android:textAlignment="center"
            android:text="Nợ luỹ kế"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>