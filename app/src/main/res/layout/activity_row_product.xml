<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RowProductActivity">
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:text="ID:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/idProductTextView"
            android:text="id customer"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:text="Nhóm:"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/groupProductTextView"
            android:text="group Product"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:text="Tên:"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nameProductTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".85"
            android:text="name Product"
            android:textColor="#FCFF494F"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout2">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:text="Giá 1:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/price1TextView"
            android:text="name Product"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:text="Giá 2:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/price2TextView"
            android:text="name Product"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout3"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:text="Giá 3:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/price3TextView"
            android:text="id Product"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:text="Giá 4:"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price4TextView"
            android:text="group Product"
            android:layout_width="0dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_weight=".35"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>